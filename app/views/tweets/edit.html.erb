<%= form_for(@tweet) do |f| %>
    <% if @tweet.errors.any? %>
       <div id="error_explanation">
           <h2><%= @tweet.errors.count %>件のエラーがあります。</h2>
 
           <ul>
               <% @tweet.errors.full_messages.each do | message | %>
                   <%= message %>
               <% end %>
           </ul>
       </div>
   <% end %>

    <%= f.label :content %>
    <%= f.text_field :content %>
    <br>
    <%= f.submit %>
<% end %>
 
<%= link_to "メッセージ一覧画面にもどる", tweets_path %>